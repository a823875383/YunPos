<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.jsqix.yunpos.app.SetActivity">

    <com.jsqix.yunpos.app.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountInformation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_account_infor"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="个人资料"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FAFAFA" />

        <TextView
            android:id="@+id/passWordChange"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_pass_modify"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="修改密码"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FAFAFA" />

        <TextView
            android:id="@+id/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_about"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="关于我们"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FAFAFA" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_issue"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="用户帮助"
            android:textSize="16sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/loginOut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/ic_login_out"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/arrow_right"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="注销登录"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FAFAFA" />
    </LinearLayout>
</LinearLayout>